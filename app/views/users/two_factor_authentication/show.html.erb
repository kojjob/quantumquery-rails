<div class="max-w-4xl mx-auto px-4 py-8">
  <div class="bg-white shadow-lg rounded-lg overflow-hidden">
    <div class="bg-gradient-to-r from-purple-600 to-indigo-600 px-6 py-4">
      <h1 class="text-2xl font-bold text-white">Two-Factor Authentication</h1>
    </div>
    
    <div class="p-6">
      <% if current_user.two_factor_enabled? %>
        <!-- 2FA is enabled -->
        <div class="bg-green-50 border border-green-200 rounded-lg p-4 mb-6">
          <div class="flex items-center">
            <svg class="h-6 w-6 text-green-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <div>
              <h3 class="text-lg font-semibold text-green-900">Two-factor authentication is enabled</h3>
              <p class="text-sm text-green-700 mt-1">
                Enabled on <%= current_user.two_factor_enabled_at.strftime("%B %d, %Y at %I:%M %p") %>
              </p>
            </div>
          </div>
        </div>
        
        <div class="space-y-6">
          <!-- Backup Codes Section -->
          <div class="border border-gray-200 rounded-lg p-4">
            <h3 class="text-lg font-semibold mb-3">Backup Codes</h3>
            <p class="text-gray-600 mb-4">
              Keep these backup codes in a safe place. You can use them to access your account if you lose your device.
            </p>
            
            <% if @backup_codes.present? %>
              <div class="bg-gray-50 rounded-lg p-4 mb-4">
                <div class="grid grid-cols-2 gap-2 font-mono text-sm">
                  <% @backup_codes.each do |code| %>
                    <div class="bg-white px-3 py-2 rounded border border-gray-200">
                      <%= code %>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
            
            <%= form_with url: regenerate_backup_codes_users_two_factor_authentication_path, method: :post, local: true do |f| %>
              <%= f.submit "Generate New Backup Codes", class: "btn btn-secondary" %>
            <% end %>
          </div>
          
          <!-- Disable 2FA Section -->
          <div class="border border-red-200 bg-red-50 rounded-lg p-4">
            <h3 class="text-lg font-semibold text-red-900 mb-3">Disable Two-Factor Authentication</h3>
            <p class="text-red-700 mb-4">
              Disabling two-factor authentication will make your account less secure. Are you sure you want to proceed?
            </p>
            
            <%= form_with url: disable_users_two_factor_authentication_path, method: :delete, local: true do |f| %>
              <div class="mb-4">
                <%= f.label :confirm, "Type DISABLE to confirm:", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= f.text_field :confirm, class: "form-input w-full", placeholder: "DISABLE", required: true %>
              </div>
              <%= f.submit "Disable Two-Factor Authentication", class: "btn bg-red-600 hover:bg-red-700 text-white", 
                  data: { confirm: "Are you sure you want to disable two-factor authentication?" } %>
            <% end %>
          </div>
        </div>
        
      <% else %>
        <!-- 2FA is not enabled -->
        <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4 mb-6">
          <div class="flex items-center">
            <svg class="h-6 w-6 text-yellow-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
            </svg>
            <div>
              <h3 class="text-lg font-semibold text-yellow-900">Two-factor authentication is not enabled</h3>
              <p class="text-sm text-yellow-700 mt-1">
                Add an extra layer of security to your account
              </p>
            </div>
          </div>
        </div>
        
        <div class="space-y-6">
          <!-- Setup Instructions -->
          <div>
            <h3 class="text-lg font-semibold mb-3">Setup Instructions</h3>
            <ol class="list-decimal list-inside space-y-2 text-gray-600">
              <li>Install an authenticator app on your phone (Google Authenticator, Authy, or Microsoft Authenticator)</li>
              <li>Scan the QR code below with your authenticator app</li>
              <li>Enter the 6-digit verification code from your app</li>
              <li>Save your backup codes in a secure location</li>
            </ol>
          </div>
          
          <!-- QR Code -->
          <div class="border border-gray-200 rounded-lg p-6 bg-white">
            <h3 class="text-lg font-semibold mb-4 text-center">Scan this QR Code</h3>
            <div class="flex justify-center mb-4">
              <%= raw @qr_code %>
            </div>
            <p class="text-sm text-gray-500 text-center">
              Can't scan? Enter this secret manually: <code class="bg-gray-100 px-2 py-1 rounded"><%= current_user.otp_secret %></code>
            </p>
          </div>
          
          <!-- Verification Form -->
          <%= form_with url: enable_users_two_factor_authentication_path, method: :post, local: true do |f| %>
            <div class="border border-gray-200 rounded-lg p-4">
              <h3 class="text-lg font-semibold mb-3">Verify Setup</h3>
              <p class="text-gray-600 mb-4">
                Enter the 6-digit code from your authenticator app to complete setup.
              </p>
              
              <div class="mb-4">
                <%= f.label :otp_code, "Verification Code", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= f.text_field :otp_code, 
                    class: "form-input w-full text-center text-2xl font-mono tracking-wider", 
                    placeholder: "000000", 
                    maxlength: 6,
                    pattern: "[0-9]{6}",
                    autocomplete: "off",
                    required: true %>
              </div>
              
              <%= f.submit "Enable Two-Factor Authentication", class: "btn btn-primary w-full" %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>