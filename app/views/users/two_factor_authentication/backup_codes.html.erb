<div class="max-w-4xl mx-auto px-4 py-8">
  <div class="bg-white shadow-lg rounded-lg overflow-hidden">
    <div class="bg-gradient-to-r from-green-600 to-teal-600 px-6 py-4">
      <h1 class="text-2xl font-bold text-white">Backup Codes Generated</h1>
    </div>
    
    <div class="p-6">
      <div class="bg-green-50 border border-green-200 rounded-lg p-4 mb-6">
        <div class="flex items-start">
          <svg class="h-6 w-6 text-green-600 mr-3 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <div>
            <h3 class="text-lg font-semibold text-green-900">Two-factor authentication is now active!</h3>
            <p class="text-sm text-green-700 mt-1">
              Your account is now protected with two-factor authentication.
            </p>
          </div>
        </div>
      </div>
      
      <div class="space-y-6">
        <!-- Important Notice -->
        <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
          <div class="flex items-start">
            <svg class="h-6 w-6 text-yellow-600 mr-3 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
            </svg>
            <div>
              <h4 class="font-semibold text-yellow-900">Important: Save these backup codes</h4>
              <p class="text-sm text-yellow-700 mt-1">
                These codes will only be shown once. Each code can be used only once to sign in if you lose access to your authenticator device.
              </p>
            </div>
          </div>
        </div>
        
        <!-- Backup Codes -->
        <div class="border border-gray-200 rounded-lg p-6 bg-gray-50">
          <h3 class="text-lg font-semibold mb-4">Your Backup Codes</h3>
          
          <div class="bg-white rounded-lg p-6 mb-4 border border-gray-300">
            <div class="grid grid-cols-2 gap-3 font-mono text-lg">
              <% @backup_codes.each_with_index do |code, index| %>
                <div class="flex items-center">
                  <span class="text-gray-500 mr-3"><%= (index + 1).to_s.rjust(2, '0') %>.</span>
                  <span class="bg-gray-100 px-3 py-2 rounded border border-gray-300 flex-1 text-center">
                    <%= code %>
                  </span>
                </div>
              <% end %>
            </div>
          </div>
          
          <div class="flex flex-col sm:flex-row gap-3">
            <button onclick="printBackupCodes()" class="btn btn-secondary flex-1">
              <svg class="h-5 w-5 mr-2 inline-block" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z"></path>
              </svg>
              Print Codes
            </button>
            
            <button onclick="downloadBackupCodes()" class="btn btn-secondary flex-1">
              <svg class="h-5 w-5 mr-2 inline-block" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
              Download Codes
            </button>
          </div>
        </div>
        
        <!-- Next Steps -->
        <div class="border border-gray-200 rounded-lg p-4">
          <h3 class="text-lg font-semibold mb-3">What's Next?</h3>
          <ul class="space-y-2 text-gray-600">
            <li class="flex items-start">
              <svg class="h-5 w-5 text-green-500 mr-2 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span>Store these backup codes in a secure location (password manager, safe, etc.)</span>
            </li>
            <li class="flex items-start">
              <svg class="h-5 w-5 text-green-500 mr-2 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span>You'll need your authenticator app or a backup code each time you sign in</span>
            </li>
            <li class="flex items-start">
              <svg class="h-5 w-5 text-green-500 mr-2 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span>If you lose your device, use a backup code to regain access</span>
            </li>
          </ul>
        </div>
        
        <div class="text-center">
          <%= link_to "Go to Account Settings", edit_user_registration_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
function printBackupCodes() {
  window.print();
}

function downloadBackupCodes() {
  const codes = <%= @backup_codes.to_json %>;
  const content = "QuantumQuery Two-Factor Authentication Backup Codes\n" +
                  "Generated: <%= Time.current.strftime('%B %d, %Y at %I:%M %p') %>\n" +
                  "Account: <%= current_user.email %>\n\n" +
                  "IMPORTANT: Keep these codes secure. Each can be used only once.\n\n" +
                  codes.map((code, i) => `${String(i + 1).padStart(2, '0')}. ${code}`).join('\n');
  
  const blob = new Blob([content], { type: 'text/plain' });
  const url = window.URL.createObjectURL(blob);
  const a = document.createElement('a');
  a.href = url;
  a.download = 'quantumquery-backup-codes.txt';
  document.body.appendChild(a);
  a.click();
  document.body.removeChild(a);
  window.URL.revokeObjectURL(url);
}
</script>