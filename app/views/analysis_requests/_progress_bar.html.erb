<div class="w-full">
  <div class="flex items-center justify-between mb-2">
    <span class="text-sm font-medium text-gray-700">Progress</span>
    <span class="text-sm text-gray-500"><%= analysis_request.progress_percentage %>%</span>
  </div>
  <div class="w-full bg-gray-200 rounded-full h-2">
    <div class="bg-indigo-600 h-2 rounded-full transition-all duration-500 ease-out" 
         style="width: <%= analysis_request.progress_percentage %>%"></div>
  </div>
  <% if analysis_request.processing? %>
    <p class="mt-2 text-sm text-gray-600">
      <%= analysis_request.current_step_description %>
    </p>
  <% end %>
</div>