<div class="border rounded-lg p-4 <%= step_border_color(step) %>">
  <div class="flex items-start">
    <div class="flex-shrink-0">
      <%= step_icon(step) %>
    </div>
    <div class="ml-3 flex-1">
      <div class="flex items-center justify-between">
        <h3 class="text-sm font-medium text-gray-900">
          <%= step.step_type.humanize %>
        </h3>
        <%= render 'shared/status_badge', status: step.status %>
      </div>
      
      <p class="mt-1 text-sm text-gray-600">
        <%= step.description %>
      </p>
      
      <% if step.code.present? %>
        <details class="mt-3">
          <summary class="cursor-pointer text-sm text-indigo-600 hover:text-indigo-500">
            View generated code
          </summary>
          <div class="mt-2 bg-gray-900 rounded-md overflow-hidden">
            <pre class="p-3 text-xs text-gray-100 overflow-x-auto"><code class="language-<%= step.language %>"><%= step.code %></code></pre>
          </div>
        </details>
      <% end %>
      
      <% if step.output.present? %>
        <div class="mt-3">
          <h4 class="text-sm font-medium text-gray-700 mb-1">Output:</h4>
          <div class="bg-gray-50 rounded-md p-3">
            <pre class="text-xs text-gray-700 whitespace-pre-wrap"><%= step.output.truncate(1000) %></pre>
          </div>
        </div>
      <% end %>
      
      <% if step.error_message.present? %>
        <div class="mt-3 bg-red-50 rounded-md p-3">
          <h4 class="text-sm font-medium text-red-800 mb-1">Error:</h4>
          <p class="text-sm text-red-700"><%= step.error_message %></p>
        </div>
      <% end %>
      
      <% if step.completed? && step.metadata['generated_files'].present? %>
        <div class="mt-3">
          <h4 class="text-sm font-medium text-gray-700 mb-1">Generated Files:</h4>
          <ul class="space-y-1">
            <% step.metadata['generated_files'].each do |file| %>
              <li class="flex items-center text-sm text-gray-600">
                <svg class="h-4 w-4 mr-1 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                <%= file['name'] %> (<%= number_to_human_size(file['size']) %>)
              </li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <div class="mt-2 flex items-center text-xs text-gray-500 space-x-3">
        <% if step.started_at %>
          <span>Started: <%= step.started_at.strftime('%H:%M:%S') %></span>
        <% end %>
        <% if step.execution_time %>
          <span>Duration: <%= number_with_precision(step.execution_time, precision: 2) %>s</span>
        <% end %>
      </div>
    </div>
  </div>
</div>