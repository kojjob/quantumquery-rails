<div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
  <div class="flex items-start justify-between">
    <div class="flex-1">
      <div class="flex items-center">
        <h4 class="text-sm font-medium text-gray-900">
          <%= step.step_type.humanize %>
        </h4>
        <% if step.language.present? %>
          <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">
            <%= step.language %>
          </span>
        <% end %>
      </div>
      <% if step.description.present? %>
        <p class="mt-1 text-sm text-gray-600"><%= step.description %></p>
      <% end %>
    </div>
    
    <div class="ml-4 flex items-center">
      <% case step.status %>
      <% when 'completed' %>
        <span class="text-green-500">
          <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
        </span>
      <% when 'failed' %>
        <span class="text-red-500">
          <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
          </svg>
        </span>
      <% when 'executing' %>
        <span class="text-yellow-500">
          <svg class="animate-spin h-5 w-5" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
        </span>
      <% else %>
        <span class="text-gray-400">
          <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm-1-11a1 1 0 112 0v5a1 1 0 11-2 0V7zm0 8a1 1 0 112 0v.01a1 1 0 11-2 0V15z" clip-rule="evenodd"/>
          </svg>
        </span>
      <% end %>
      
      <% if step.execution_time_ms.present? %>
        <span class="ml-2 text-xs text-gray-500">
          <%= step.execution_time_ms %>ms
        </span>
      <% end %>
    </div>
  </div>
  
  <% if step.error_message.present? %>
    <div class="mt-2 text-sm text-red-600 bg-red-50 rounded p-2">
      <%= step.error_message %>
    </div>
  <% end %>
  
  <% if step.result_data.present? %>
    <div class="mt-2">
      <details class="text-xs">
        <summary class="cursor-pointer text-gray-500 hover:text-gray-700">View Output</summary>
        <pre class="mt-2 p-2 bg-gray-900 text-gray-100 rounded overflow-x-auto"><%= JSON.pretty_generate(step.result_data) rescue step.result_data %></pre>
      </details>
    </div>
  <% end %>
</div>