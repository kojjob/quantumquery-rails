<% content_for :title, "Analysis Requests" %>

<div class="min-h-screen bg-gray-50 dark:bg-gray-900">
  <!-- Header -->
  <div class="bg-white dark:bg-gray-800 shadow-sm border-b border-gray-200 dark:border-gray-700 pt-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Analysis History</h1>
          <p class="mt-2 text-lg text-gray-600 dark:text-gray-300">Review your past data analysis requests and results</p>
        </div>
        <%= link_to "Data Sources", datasets_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors duration-200" %>
      </div>
    </div>
  </div>

  <!-- Filters -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <div class="bg-white dark:bg-gray-800 shadow rounded-lg p-4 border border-gray-200 dark:border-gray-700">
      <div class="flex flex-wrap items-center justify-between gap-4">
        <div class="flex items-center space-x-4">
          <!-- Status Filter -->
          <div class="flex items-center space-x-2">
            <label class="text-sm font-medium text-gray-700 dark:text-gray-300">Status:</label>
            <%= link_to "All", analysis_requests_path, class: "px-3 py-1 rounded-full text-sm #{params[:status].blank? ? 'bg-teal-100 dark:bg-teal-900/30 text-teal-800 dark:text-teal-300' : 'text-gray-600 dark:text-gray-400 hover:text-teal-600 dark:hover:text-teal-400'}" %>
            <%= link_to "Completed", analysis_requests_path(status: 'completed'), class: "px-3 py-1 rounded-full text-sm #{params[:status] == 'completed' ? 'bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-300' : 'text-gray-600 dark:text-gray-400 hover:text-green-600 dark:hover:text-green-400'}" %>
            <%= link_to "Processing", analysis_requests_path(status: 'processing'), class: "px-3 py-1 rounded-full text-sm #{params[:status] == 'processing' ? 'bg-yellow-100 dark:bg-yellow-900/30 text-yellow-800 dark:text-yellow-300' : 'text-gray-600 dark:text-gray-400 hover:text-yellow-600 dark:hover:text-yellow-400'}" %>
            <%= link_to "Failed", analysis_requests_path(status: 'failed'), class: "px-3 py-1 rounded-full text-sm #{params[:status] == 'failed' ? 'bg-red-100 dark:bg-red-900/30 text-red-800 dark:text-red-300' : 'text-gray-600 dark:text-gray-400 hover:text-red-600 dark:hover:text-red-400'}" %>
          </div>
        </div>
        <div class="text-sm text-gray-500 dark:text-gray-400">
          <%= pluralize(@analysis_requests.total_count, 'analysis request') %> total
        </div>
      </div>
    </div>
  </div>

  <!-- Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pb-8">
    <% if @analysis_requests.any? %>
      <!-- Analysis Requests List -->
      <div class="bg-white dark:bg-gray-800 shadow-lg rounded-lg border border-gray-200 dark:border-gray-700 overflow-hidden">
        <div class="divide-y divide-gray-200 dark:divide-gray-700">
          <% @analysis_requests.each do |analysis_request| %>
            <div class="p-6 hover:bg-gray-50 dark:hover:bg-gray-700/50 transition-colors duration-200">
              <div class="flex items-start justify-between">
                <div class="flex-1 min-w-0">
                  <div class="flex items-center space-x-3 mb-2">
                    <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
                      <%= link_to analysis_request.query.truncate(60), analysis_request, class: "hover:text-teal-600 dark:hover:text-teal-400 transition-colors duration-200" %>
                    </h3>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                      <%= case analysis_request.status
                          when 'completed' then 'bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-300'
                          when 'processing' then 'bg-yellow-100 dark:bg-yellow-900/30 text-yellow-800 dark:text-yellow-300'
                          when 'failed' then 'bg-red-100 dark:bg-red-900/30 text-red-800 dark:text-red-300'
                          else 'bg-gray-100 dark:bg-gray-900/30 text-gray-800 dark:text-gray-300'
                          end %>">
                      <%= analysis_request.status.humanize %>
                    </span>
                  </div>
                  
                  <div class="flex items-center text-sm text-gray-600 dark:text-gray-400 space-x-4 mb-3">
                    <div class="flex items-center">
                      <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4z"/>
                        <path d="M6 8a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z"/>
                      </svg>
                      <%= analysis_request.dataset.name if analysis_request.dataset %>
                    </div>
                    <div class="flex items-center">
                      <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
                      </svg>
                      <%= analysis_request.user.email if analysis_request.user %>
                    </div>
                    <div class="flex items-center">
                      <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
                      </svg>
                      <%= time_ago_in_words(analysis_request.created_at) %> ago
                    </div>
                  </div>

                  <% if analysis_request.execution_time.present? %>
                    <div class="text-sm text-gray-600 dark:text-gray-400 mb-3">
                      Execution time: <%= "#{analysis_request.execution_time}ms" %>
                    </div>
                  <% end %>
                </div>

                <div class="flex items-center space-x-2">
                  <%= link_to "View Details", analysis_request, class: "inline-flex items-center px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors duration-200" %>
                  
                  <% if analysis_request.status == 'completed' %>
                    <div class="relative inline-block text-left">
                      <button type="button" class="inline-flex items-center px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors duration-200" onclick="toggleDropdown(<%= analysis_request.id %>)">
                        Export
                        <svg class="ml-1 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/>
                        </svg>
                      </button>
                      <div id="dropdown-<%= analysis_request.id %>" class="hidden absolute right-0 z-10 mt-2 w-32 origin-top-right rounded-md bg-white dark:bg-gray-800 shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none">
                        <div class="py-1">
                          <%= link_to "JSON", export_analysis_request_path(analysis_request, format: :json), class: "block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700" %>
                          <%= link_to "CSV", export_analysis_request_path(analysis_request, format: :csv), class: "block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700" %>
                          <%= link_to "Excel", export_analysis_request_path(analysis_request, format: :xlsx), class: "block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700" %>
                        </div>
                      </div>
                    </div>
                  <% end %>

                  <%= link_to analysis_request, method: :delete, confirm: "Are you sure?", class: "inline-flex items-center p-2 border border-red-300 dark:border-red-600 rounded-md text-red-700 dark:text-red-300 bg-white dark:bg-gray-800 hover:bg-red-50 dark:hover:bg-red-900/20 transition-colors duration-200" do %>
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd"/>
                    </svg>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Pagination -->
      <div class="mt-6 flex justify-center">
        <%= paginate @analysis_requests if respond_to?(:paginate) %>
      </div>
    <% else %>
      <!-- Empty State -->
      <div class="text-center py-12">
        <svg class="mx-auto h-24 w-24 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
        </svg>
        <h3 class="mt-6 text-lg font-medium text-gray-900 dark:text-white">No analysis requests found</h3>
        <p class="mt-2 text-gray-500 dark:text-gray-400">
          <% if params[:status].present? %>
            No analysis requests with status "<%= params[:status] %>".
          <% else %>
            Start analyzing your data sources to see requests here.
          <% end %>
        </p>
        <div class="mt-6">
          <%= link_to "Analyze Data", datasets_path, class: "inline-flex items-center px-4 py-2 bg-gradient-to-r from-teal-600 to-cyan-600 border border-transparent rounded-md shadow-sm text-sm font-medium text-white hover:from-teal-700 hover:to-cyan-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-teal-500 transition-all duration-200" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<script>
  function toggleDropdown(id) {
    const dropdown = document.getElementById(`dropdown-${id}`);
    dropdown.classList.toggle('hidden');
  }

  // Close dropdowns when clicking outside
  document.addEventListener('click', function(event) {
    if (!event.target.closest('[onclick*="toggleDropdown"]')) {
      document.querySelectorAll('[id^="dropdown-"]').forEach(dropdown => {
        dropdown.classList.add('hidden');
      });
    }
  });
</script>