<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Query Cache Management</h1>
    <div class="flex space-x-4">
      <%= link_to "View Statistics", statistics_query_caches_path, class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded" %>
      <%= link_to "Clear Expired", clear_expired_query_caches_path, method: :post, data: { confirm: "Are you sure you want to clear expired cache entries?" }, class: "bg-yellow-500 hover:bg-yellow-600 text-white font-bold py-2 px-4 rounded" %>
      <%= link_to "Clear All", clear_all_query_caches_path, method: :post, data: { confirm: "Are you sure you want to clear ALL cache entries?" }, class: "bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded" %>
    </div>
  </div>
  
  <% if @dataset %>
    <div class="mb-4 p-4 bg-blue-50 rounded">
      <p class="text-sm text-gray-700">
        Showing cache entries for dataset: <strong><%= @dataset.name %></strong>
        <%= link_to "View all caches", query_caches_path, class: "ml-4 text-blue-600 hover:underline" %>
      </p>
    </div>
  <% end %>
  
  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Query
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Dataset
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Access Count
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Size
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Last Accessed
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Expires
          </th>
          <th scope="col" class="relative px-6 py-3">
            <span class="sr-only">Actions</span>
          </th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @query_caches.each do |cache| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= link_to cache.query_text.truncate(60), query_cache_path(cache), class: "text-blue-600 hover:underline" %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= cache.dataset.name %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                <%= cache.access_count %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= number_to_human_size(cache.cache_size_bytes) %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= cache.accessed_at ? time_ago_in_words(cache.accessed_at) + " ago" : "Never" %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <% if cache.expires_at %>
                <% if cache.expired? %>
                  <span class="text-red-600">Expired</span>
                <% else %>
                  <%= time_ago_in_words(cache.expires_at) %> remaining
                <% end %>
              <% else %>
                <span class="text-green-600">No expiration</span>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
              <div class="flex justify-end space-x-2">
                <%= link_to "Refresh", refresh_query_cache_path(cache), method: :post, class: "text-indigo-600 hover:text-indigo-900" %>
                <%= link_to "Delete", query_cache_path(cache), method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-600 hover:text-red-900" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <% if @query_caches.empty? %>
      <div class="text-center py-8">
        <p class="text-gray-500">No cached queries found.</p>
      </div>
    <% end %>
  </div>
  
  <% if @query_caches.respond_to?(:total_pages) %>
    <div class="mt-4">
      <%= paginate @query_caches %>
    </div>
  <% end %>
</div>