<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900"><%= @scheduled_report.name %></h1>
    <div class="flex space-x-2">
      <%= link_to "Edit", edit_scheduled_report_path(@scheduled_report), 
          class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition duration-200" %>
      <%= button_to "Run Now", run_now_scheduled_report_path(@scheduled_report), 
          method: :post,
          class: "px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition duration-200" %>
      <%= link_to "Back", scheduled_reports_path, 
          class: "px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition duration-200" %>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Main Information -->
    <div class="lg:col-span-2">
      <div class="bg-white rounded-lg shadow p-6 mb-6">
        <h2 class="text-xl font-semibold mb-4">Report Details</h2>
        
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-gray-500">Query</label>
            <p class="mt-1 text-gray-900 bg-gray-50 p-3 rounded"><%= @scheduled_report.query %></p>
          </div>

          <div class="grid grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium text-gray-500">Dataset</label>
              <p class="mt-1 text-gray-900">
                <% if @scheduled_report.dataset %>
                  <%= link_to @scheduled_report.dataset.name, @scheduled_report.dataset, 
                      class: "text-blue-600 hover:text-blue-900" %>
                <% else %>
                  <span class="text-gray-500">No dataset selected</span>
                <% end %>
              </p>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-500">Format</label>
              <p class="mt-1">
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">
                  <%= @scheduled_report.format.upcase %>
                </span>
              </p>
            </div>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-500">Recipients</label>
            <div class="mt-1">
              <% if @scheduled_report.recipients.present? %>
                <% @scheduled_report.recipients.each do |email| %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 mr-2 mb-2">
                    <%= email %>
                  </span>
                <% end %>
              <% else %>
                <span class="text-gray-500">No recipients configured</span>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <!-- Recent Runs -->
      <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-xl font-semibold mb-4">Recent Report Runs</h2>
        
        <% if @recent_runs.any? %>
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead>
                <tr>
                  <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Run Date</th>
                  <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
                  <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200">
                <% @recent_runs.each do |run| %>
                  <tr>
                    <td class="px-4 py-3 whitespace-nowrap text-sm">
                      <%= run.created_at.strftime("%b %d, %Y at %l:%M %p") %>
                    </td>
                    <td class="px-4 py-3 whitespace-nowrap">
                      <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= run.completed? ? 'bg-green-100 text-green-800' : (run.failed? ? 'bg-red-100 text-red-800' : 'bg-yellow-100 text-yellow-800') %>">
                        <%= run.status.capitalize %>
                      </span>
                    </td>
                    <td class="px-4 py-3 whitespace-nowrap text-sm">
                      <%= link_to "View Report", analysis_request_path(run), 
                          class: "text-blue-600 hover:text-blue-900" %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <p class="text-gray-500">No report runs yet</p>
        <% end %>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="lg:col-span-1">
      <!-- Schedule Information -->
      <div class="bg-white rounded-lg shadow p-6 mb-6">
        <h2 class="text-xl font-semibold mb-4">Schedule</h2>
        
        <div class="space-y-3">
          <div>
            <label class="block text-sm font-medium text-gray-500">Status</label>
            <p class="mt-1">
              <% if @scheduled_report.enabled? %>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                  Enabled
                </span>
              <% else %>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">
                  Disabled
                </span>
              <% end %>
            </p>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-500">Frequency</label>
            <p class="mt-1 text-gray-900 font-medium"><%= @scheduled_report.formatted_schedule %></p>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-500">Next Run</label>
            <p class="mt-1 text-gray-900">
              <% if @scheduled_report.next_run_at %>
                <%= @scheduled_report.next_run_at.strftime("%b %d, %Y at %l:%M %p") %>
                <span class="block text-xs text-gray-500">
                  <%= distance_of_time_in_words_to_now(@scheduled_report.next_run_at) %> from now
                </span>
              <% else %>
                <span class="text-gray-500">Not scheduled</span>
              <% end %>
            </p>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-500">Last Run</label>
            <p class="mt-1 text-gray-900">
              <% if @scheduled_report.last_run_at %>
                <%= @scheduled_report.last_run_at.strftime("%b %d, %Y at %l:%M %p") %>
                <span class="block text-xs text-gray-500">
                  <%= distance_of_time_in_words_to_now(@scheduled_report.last_run_at) %> ago
                </span>
              <% else %>
                <span class="text-gray-500">Never</span>
              <% end %>
            </p>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-500">Total Runs</label>
            <p class="mt-1 text-gray-900 font-medium"><%= @scheduled_report.run_count %></p>
          </div>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="bg-white rounded-lg shadow p-6">
        <h3 class="font-semibold mb-4">Quick Actions</h3>
        <div class="space-y-2">
          <% if @scheduled_report.enabled? %>
            <%= button_to "Disable Report", disable_scheduled_report_path(@scheduled_report), 
                method: :patch,
                class: "w-full px-4 py-2 bg-orange-100 text-orange-700 rounded hover:bg-orange-200 transition duration-200" %>
          <% else %>
            <%= button_to "Enable Report", enable_scheduled_report_path(@scheduled_report), 
                method: :patch,
                class: "w-full px-4 py-2 bg-green-100 text-green-700 rounded hover:bg-green-200 transition duration-200" %>
          <% end %>
          
          <%= button_to "Delete Report", @scheduled_report, 
              method: :delete,
              data: { confirm: "Are you sure you want to delete this scheduled report?" },
              class: "w-full px-4 py-2 bg-red-100 text-red-700 rounded hover:bg-red-200 transition duration-200" %>
        </div>
      </div>
    </div>
  </div>
</div>