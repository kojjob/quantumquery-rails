<div class="container mx-auto px-4 py-8 max-w-2xl">
  <h1 class="text-3xl font-bold text-gray-900 mb-6">Create API Token</h1>

  <%= form_with model: @api_token, local: true do |form| %>
    <% if @api_token.errors.any? %>
      <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded mb-4">
        <p class="font-bold">Please fix the following errors:</p>
        <ul class="list-disc list-inside">
          <% @api_token.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="bg-white shadow sm:rounded-lg p-6">
      <div class="mb-4">
        <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500", 
            placeholder: "e.g., Production API Key" %>
        <p class="mt-1 text-sm text-gray-500">Give your token a descriptive name to remember its purpose.</p>
      </div>

      <div class="mb-4">
        <%= form.label :expires_at, "Expiration (optional)", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.datetime_field :expires_at, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
        <p class="mt-1 text-sm text-gray-500">Leave blank for no expiration.</p>
      </div>

      <div class="mb-6">
        <label class="block text-sm font-medium text-gray-700 mb-2">Permissions</label>
        <p class="text-sm text-gray-500 mb-3">Select the scopes this token should have access to.</p>
        
        <div class="space-y-2">
          <% ApiToken::DEFAULT_SCOPES.each do |scope| %>
            <label class="flex items-center">
              <%= check_box_tag "api_token[scopes][]", scope, true, 
                  class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
              <span class="ml-2 text-sm text-gray-700">
                <strong><%= scope.humanize %></strong>
                <span class="text-gray-500">- <%= scope_description(scope) %></span>
              </span>
            </label>
          <% end %>
        </div>
      </div>

      <div class="flex justify-between">
        <%= link_to "Cancel", api_tokens_path, class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded" %>
        <%= form.submit "Create Token", class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded cursor-pointer" %>
      </div>
    </div>
  <% end %>
</div>

<% def scope_description(scope)
  case scope
  when "datasets:read"
    "View datasets and their metadata"
  when "datasets:write"
    "Create, update, and delete datasets"
  when "analysis:read"
    "View analysis results"
  when "analysis:write"
    "Create new analysis requests"
  when "cache:read"
    "View cache statistics"
  when "cache:manage"
    "Clear and manage cache"
  else
    "Access to #{scope} operations"
  end
end %>