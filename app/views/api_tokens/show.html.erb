<div class="container mx-auto px-4 py-8 max-w-3xl">
  <div class="bg-white shadow sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900">
        API Token: <%= @api_token.name %>
      </h3>
      <p class="mt-1 max-w-2xl text-sm text-gray-500">
        Created <%= @api_token.created_at.strftime("%B %d, %Y at %I:%M %p") %>
      </p>
    </div>

    <% if @show_token %>
      <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
        <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mb-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-yellow-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm text-yellow-700">
                <strong>Important:</strong> Copy your token now. For security reasons, it won't be shown again.
              </p>
            </div>
          </div>
        </div>

        <div class="bg-gray-50 p-4 rounded-md">
          <label class="block text-sm font-medium text-gray-700 mb-2">Your API Token</label>
          <div class="flex">
            <input type="text" id="api-token" value="<%= @api_token.token %>" readonly
                   class="flex-1 px-3 py-2 border border-gray-300 rounded-l-md bg-white font-mono text-sm">
            <button onclick="copyToken()" 
                    class="px-4 py-2 bg-blue-500 text-white rounded-r-md hover:bg-blue-600 focus:outline-none">
              Copy
            </button>
          </div>
        </div>

        <script>
          function copyToken() {
            const tokenInput = document.getElementById('api-token');
            tokenInput.select();
            document.execCommand('copy');
            alert('Token copied to clipboard!');
          }
        </script>
      </div>
    <% end %>

    <div class="border-t border-gray-200">
      <dl>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Status</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <% if @api_token.revoked? %>
              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                Revoked
              </span>
            <% elsif @api_token.expired? %>
              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">
                Expired
              </span>
            <% else %>
              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                Active
              </span>
            <% end %>
          </dd>
        </div>

        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Expires</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <%= @api_token.expires_at ? @api_token.expires_at.strftime("%B %d, %Y at %I:%M %p") : "Never" %>
          </dd>
        </div>

        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Last Used</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <%= @api_token.last_used_at ? time_ago_in_words(@api_token.last_used_at) + " ago" : "Never" %>
          </dd>
        </div>

        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Permissions</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <div class="flex flex-wrap gap-2">
              <% @api_token.scopes_array.each do |scope| %>
                <span class="px-2 py-1 text-xs font-medium bg-blue-100 text-blue-800 rounded">
                  <%= scope %>
                </span>
              <% end %>
            </div>
          </dd>
        </div>

        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Usage Today</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <%= @api_token.usage_today %> requests
          </dd>
        </div>

        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Usage This Month</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <%= @api_token.usage_this_month %> requests
          </dd>
        </div>
      </dl>
    </div>

    <div class="px-4 py-3 bg-gray-50 text-right sm:px-6">
      <%= link_to "Back to Tokens", api_tokens_path, class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded mr-2" %>
      <% if @api_token.active? %>
        <%= link_to "Revoke Token", revoke_api_token_path(@api_token), method: :post,
            data: { confirm: "Are you sure you want to revoke this token?" },
            class: "bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded" %>
      <% end %>
    </div>
  </div>

  <div class="mt-8 bg-white shadow sm:rounded-lg p-6">
    <h4 class="text-lg font-medium text-gray-900 mb-4">Using Your API Token</h4>
    
    <div class="space-y-4">
      <div>
        <h5 class="text-sm font-medium text-gray-700 mb-2">Example: List Datasets</h5>
        <pre class="bg-gray-50 p-3 rounded text-sm overflow-x-auto"><code>curl -H "Authorization: Bearer YOUR_TOKEN" \
  <%= request.protocol %><%= request.host_with_port %>/api/v1/datasets</code></pre>
      </div>

      <div>
        <h5 class="text-sm font-medium text-gray-700 mb-2">Example: Create Analysis</h5>
        <pre class="bg-gray-50 p-3 rounded text-sm overflow-x-auto"><code>curl -X POST \
  -H "Authorization: Bearer YOUR_TOKEN" \
  -H "Content-Type: application/json" \
  -d '{"query": "Show me sales trends", "dataset_id": 1}' \
  <%= request.protocol %><%= request.host_with_port %>/api/v1/analysis</code></pre>
      </div>

      <div class="mt-4">
        <%= link_to "View Full API Documentation", api_v1_documentation_path, 
            class: "text-blue-600 hover:text-blue-900", target: "_blank" %>
      </div>
    </div>
  </div>
</div>