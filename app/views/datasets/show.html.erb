<% content_for :title, @dataset.name %>

<!-- Modern Dataset Detail Page -->
<div class="bg-gradient-to-br from-slate-50 via-teal-50 to-cyan-50 dark:from-slate-900 dark:via-slate-800 dark:to-slate-900 min-h-screen pt-16">
  <!-- Breadcrumb & Navigation -->
  <div class="bg-white/80 dark:bg-slate-800/80 backdrop-blur-sm border-b border-slate-200/50 dark:border-slate-700/50 sticky top-16 z-10">
    <div class="max-w-8xl mx-auto px-4 sm:px-6 lg:px-8 py-3">
      <nav class="flex items-center space-x-2 text-sm">
        <%= link_to "Data Sources", datasets_path, class: "text-slate-500 dark:text-slate-400 hover:text-teal-600 dark:hover:text-teal-400 transition-colors" %>
        <svg class="h-4 w-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
        <span class="text-slate-900 dark:text-slate-100 font-medium"><%= @dataset.name.truncate(30) %></span>
      </nav>
    </div>
  </div>

  <!-- Hero Header Section -->
  <div class="relative bg-gradient-to-r from-teal-600 via-cyan-600 to-blue-600 shadow-xl">
    <div class="absolute inset-0 bg-black/20"></div>
    <div class="relative max-w-8xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between space-y-6 lg:space-y-0">
        <!-- Dataset Header Info -->
        <div class="flex-1 min-w-0">
          <div class="flex items-center space-x-4 mb-4">
            <div class="flex-shrink-0">
              <div class="h-16 w-16 bg-white/20 dark:bg-slate-800/30 rounded-xl flex items-center justify-center backdrop-blur-sm">
                <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4"></path>
                </svg>
              </div>
            </div>
            <div class="min-w-0 flex-1">
              <div class="flex items-center space-x-3 mb-2">
                <h1 class="text-3xl lg:text-4xl font-bold text-white truncate"><%= @dataset.name %></h1>
                <div class="flex-shrink-0">
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-white/20 text-white backdrop-blur-sm border border-white/30">
                    <%= @dataset.data_source_type&.humanize || "Unknown Type" %>
                  </span>
                </div>
              </div>
              <p class="text-lg text-teal-100 mb-4">
                <%= @dataset.description.presence || "No description provided" %>
              </p>
              <div class="flex flex-wrap items-center gap-6 text-sm text-teal-100">
                <div class="flex items-center space-x-2">
                  <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <span>Created <%= time_ago_in_words(@dataset.created_at) %> ago</span>
                </div>
                <div class="flex items-center space-x-2">
                  <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                  </svg>
                  <span>Updated <%= time_ago_in_words(@dataset.updated_at) %> ago</span>
                </div>
                <div class="flex items-center space-x-2">
                  <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                  </svg>
                  <span><%= pluralize(@dataset.analysis_requests.count, 'analysis') %> performed</span>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="flex flex-col sm:flex-row items-center space-y-3 sm:space-y-0 sm:space-x-3">
          <%= form_with url: analyze_dataset_path(@dataset), method: :post, local: true, class: "w-full sm:w-auto" do |form| %>
            <%= form.submit "Analyze Data", class: "w-full sm:w-auto inline-flex items-center justify-center px-6 py-3 bg-gradient-to-r from-amber-500 to-amber-600 border border-transparent rounded-xl shadow-lg text-sm font-semibold text-white hover:from-amber-600 hover:to-amber-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-amber-500 transform hover:scale-105 transition-all duration-200" %>
          <% end %>
          <%= link_to edit_dataset_path(@dataset), class: "w-full sm:w-auto inline-flex items-center justify-center px-6 py-3 bg-white/20 border border-white/30 rounded-xl shadow-lg text-sm font-medium text-white hover:bg-white/30 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-white/50 backdrop-blur-sm transition-all duration-200" do %>
            <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            Edit Dataset
          <% end %>
          <%= link_to datasets_path, class: "w-full sm:w-auto inline-flex items-center justify-center px-6 py-3 bg-white/20 border border-white/30 rounded-xl shadow-lg text-sm font-medium text-white hover:bg-white/30 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-white/50 backdrop-blur-sm transition-all duration-200" do %>
            <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Back to All
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="max-w-8xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Primary Content Area -->
      <div class="lg:col-span-2 space-y-8">
        <!-- Analysis Activity Section -->
        <div class="bg-white/70 dark:bg-slate-800/70 backdrop-blur-sm shadow-xl rounded-2xl border border-slate-200/50 dark:border-slate-700/50 overflow-hidden">
          <div class="bg-gradient-to-r from-teal-500 to-cyan-600 px-6 py-4">
            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-3">
                <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                </svg>
                <h2 class="text-xl font-bold text-white">Recent Analysis</h2>
              </div>
              <%= link_to "View All Analysis", analysis_requests_path(dataset_id: @dataset.id), class: "inline-flex items-center px-4 py-2 bg-white/20 rounded-lg text-sm font-medium text-white hover:bg-white/30 transition-all duration-200 backdrop-blur-sm" %>
            </div>
          </div>
          
          <div class="divide-y divide-slate-200/50 dark:divide-slate-700/50">
            <% if @analysis_requests.any? %>
              <% @analysis_requests.each do |analysis_request| %>
                <div class="px-6 py-5 hover:bg-teal-50/50 dark:hover:bg-slate-700/30 transition-all duration-200 group">
                  <div class="flex items-start justify-between">
                    <div class="flex-1 min-w-0">
                      <div class="flex items-center space-x-3 mb-2">
                        <h3 class="text-base font-semibold text-slate-900 dark:text-slate-100 truncate group-hover:text-teal-600 dark:group-hover:text-teal-400 transition-colors">
                          <%= link_to analysis_request.query.truncate(60), analysis_request, class: "hover:underline" %>
                        </h3>
                      </div>
                      <div class="flex flex-wrap items-center gap-4 text-sm text-slate-500 dark:text-slate-400">
                        <div class="flex items-center space-x-1">
                          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                          </svg>
                          <span><%= time_ago_in_words(analysis_request.created_at) %> ago</span>
                        </div>
                        <% if analysis_request.user %>
                          <div class="flex items-center space-x-1">
                            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                            </svg>
                            <span>by <%= analysis_request.user.email.split('@').first %></span>
                          </div>
                        <% end %>
                      </div>
                    </div>
                    <div class="flex items-center space-x-3 flex-shrink-0">
                      <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold border
                        <%= case analysis_request.status
                            when 'completed' then 'bg-green-50 text-green-700 border-green-200 dark:bg-green-900/30 dark:text-green-300 dark:border-green-700'
                            when 'processing' then 'bg-amber-50 text-amber-700 border-amber-200 dark:bg-amber-900/30 dark:text-amber-300 dark:border-amber-700'
                            when 'failed' then 'bg-red-50 text-red-700 border-red-200 dark:bg-red-900/30 dark:text-red-300 dark:border-red-700'
                            else 'bg-slate-50 text-slate-700 border-slate-200 dark:bg-slate-900/30 dark:text-slate-300 dark:border-slate-700'
                            end %>">
                        <% case analysis_request.status %>
                        <% when 'completed' %>
                          <svg class="h-3 w-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                          </svg>
                        <% when 'processing' %>
                          <svg class="h-3 w-3 mr-1 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                          </svg>
                        <% when 'failed' %>
                          <svg class="h-3 w-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                          </svg>
                        <% end %>
                        <%= analysis_request.status.humanize %>
                      </span>
                      <%= link_to analysis_request, class: "inline-flex items-center px-3 py-1 rounded-lg text-xs font-medium text-teal-600 dark:text-teal-400 hover:bg-teal-50 dark:hover:bg-teal-900/30 transition-all duration-200" do %>
                        View Results
                        <svg class="h-3 w-3 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                      <% end %>
                    </div>
                  </div>
                </div>
              <% end %>
            <% else %>
              <!-- Enhanced Empty State -->
              <div class="px-6 py-12 text-center">
                <div class="mx-auto h-24 w-24 bg-gradient-to-br from-teal-100 to-cyan-100 dark:from-teal-900/30 dark:to-cyan-900/30 rounded-full flex items-center justify-center mb-6">
                  <svg class="h-12 w-12 text-teal-500 dark:text-teal-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                  </svg>
                </div>
                <h3 class="text-lg font-semibold text-slate-900 dark:text-slate-100 mb-2">No Analysis Yet</h3>
                <p class="text-slate-500 dark:text-slate-400 mb-6 max-w-md mx-auto">Start exploring your data with powerful AI-driven analytics and insights.</p>
                <%= form_with url: analyze_dataset_path(@dataset), method: :post, local: true, class: "inline-block" do |form| %>
                  <%= form.submit "Start First Analysis", class: "inline-flex items-center px-6 py-3 bg-gradient-to-r from-teal-600 to-cyan-600 border border-transparent rounded-xl shadow-lg text-sm font-semibold text-white hover:from-teal-700 hover:to-cyan-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-teal-500 transform hover:scale-105 transition-all duration-200" %>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        <!-- Dataset Information -->
        <div class="bg-white/70 dark:bg-slate-800/70 backdrop-blur-sm shadow-xl rounded-2xl border border-slate-200/50 dark:border-slate-700/50 overflow-hidden">
          <div class="bg-gradient-to-r from-slate-500 to-slate-600 px-6 py-4">
            <div class="flex items-center space-x-3">
              <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <h3 class="text-lg font-bold text-white">Dataset Information</h3>
            </div>
          </div>
          <div class="px-6 py-6 space-y-6">
            <div class="flex items-center justify-between py-3 border-b border-slate-200/50 dark:border-slate-700/50">
              <dt class="text-sm font-medium text-slate-500 dark:text-slate-400 flex items-center space-x-2">
                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                </svg>
                <span>Type</span>
              </dt>
              <dd class="text-sm font-semibold text-slate-900 dark:text-slate-100">
                <span class="inline-flex items-center px-2.5 py-1 rounded-lg text-xs font-semibold bg-teal-50 text-teal-700 dark:bg-teal-900/30 dark:text-teal-300 border border-teal-200 dark:border-teal-700">
                  <%= @dataset.data_source_type&.humanize || "Unknown" %>
                </span>
              </dd>
            </div>
            <div class="flex items-center justify-between py-3 border-b border-slate-200/50 dark:border-slate-700/50">
              <dt class="text-sm font-medium text-slate-500 dark:text-slate-400 flex items-center space-x-2">
                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3a2 2 0 012-2h4a2 2 0 012 2v4m-6 4v10m6-10v10m-6 0V9a2 2 0 012-2h4a2 2 0 012 2v8a2 2 0 01-2 2H10a2 2 0 01-2-2z"></path>
                </svg>
                <span>Created</span>
              </dt>
              <dd class="text-sm font-semibold text-slate-900 dark:text-slate-100">
                <%= @dataset.created_at.strftime("%B %d, %Y") %>
              </dd>
            </div>
            <div class="flex items-center justify-between py-3 border-b border-slate-200/50 dark:border-slate-700/50">
              <dt class="text-sm font-medium text-slate-500 dark:text-slate-400 flex items-center space-x-2">
                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                </svg>
                <span>Last Modified</span>
              </dt>
              <dd class="text-sm font-semibold text-slate-900 dark:text-slate-100">
                <%= @dataset.updated_at.strftime("%B %d, %Y") %>
              </dd>
            </div>
            <div class="flex items-center justify-between py-3">
              <dt class="text-sm font-medium text-slate-500 dark:text-slate-400 flex items-center space-x-2">
                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                </svg>
                <span>Analysis Count</span>
              </dt>
              <dd class="text-sm font-semibold text-slate-900 dark:text-slate-100">
                <span class="inline-flex items-center px-2.5 py-1 rounded-lg text-sm font-bold bg-gradient-to-r from-amber-50 to-amber-100 text-amber-700 dark:from-amber-900/30 dark:to-amber-800/30 dark:text-amber-300 border border-amber-200 dark:border-amber-700">
                  <%= @dataset.analysis_requests.count %>
                </span>
              </dd>
            </div>
          </div>
        </div>

        <!-- Quick Actions -->
        <div class="bg-white/70 dark:bg-slate-800/70 backdrop-blur-sm shadow-xl rounded-2xl border border-slate-200/50 dark:border-slate-700/50 overflow-hidden">
          <div class="bg-gradient-to-r from-amber-500 to-amber-600 px-6 py-4">
            <div class="flex items-center space-x-3">
              <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
              <h3 class="text-lg font-bold text-white">Quick Actions</h3>
            </div>
          </div>
          <div class="px-6 py-6 space-y-4">
            <%= form_with url: analyze_dataset_path(@dataset), method: :post, local: true do |form| %>
              <%= form.submit "Analyze Data", class: "w-full flex items-center justify-center px-6 py-3 bg-gradient-to-r from-teal-600 to-cyan-600 border border-transparent rounded-xl shadow-lg text-sm font-semibold text-white hover:from-teal-700 hover:to-cyan-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-teal-500 transform hover:scale-105 transition-all duration-200" %>
            <% end %>
            <%= link_to "Edit Dataset", edit_dataset_path(@dataset), class: "w-full flex items-center justify-center px-6 py-3 bg-gradient-to-r from-slate-600 to-slate-700 border border-transparent rounded-xl shadow-lg text-sm font-semibold text-white hover:from-slate-700 hover:to-slate-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-slate-500 transform hover:scale-105 transition-all duration-200" %>
            <%= link_to "View All Analysis", analysis_requests_path(dataset_id: @dataset.id), class: "w-full flex items-center justify-center px-6 py-3 border-2 border-slate-300 dark:border-slate-600 rounded-xl shadow-lg text-sm font-semibold text-slate-700 dark:text-slate-300 bg-white/50 dark:bg-slate-800/50 hover:bg-slate-50 dark:hover:bg-slate-700/50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-slate-500 backdrop-blur-sm transition-all duration-200" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>