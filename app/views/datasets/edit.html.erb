<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="bg-white shadow-xl rounded-lg">
    <!-- Header -->
    <div class="px-6 py-4 border-b border-gray-200">
      <h1 class="text-2xl font-bold text-gray-900">Edit Data Source</h1>
      <p class="mt-1 text-sm text-gray-500">Update connection settings for <%= @dataset.name %></p>
    </div>
    
    <!-- Form -->
    <div class="px-6 py-4">
      <%= form_with model: @dataset, local: false, data: { turbo: true } do |f| %>
        <!-- Common Fields -->
        <div class="space-y-4 mb-6">
          <div>
            <%= f.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :name, 
                placeholder: "e.g., Sales Database",
                class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
          </div>
          
          <div>
            <%= f.label :description, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_area :description,
                rows: 2,
                placeholder: "Optional description of this data source",
                class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
          </div>
        </div>
        
        <!-- Source Type Display -->
        <div class="mb-6">
          <label class="block text-sm font-medium text-gray-700 mb-1">Connection Type</label>
          <div class="px-4 py-2 bg-gray-100 rounded-md">
            <span class="font-medium text-gray-900"><%= @dataset.source_type.humanize %></span>
            <span class="text-sm text-gray-500 ml-2">(Cannot be changed)</span>
          </div>
        </div>
        
        <!-- Connection Configuration based on source type -->
        <% case @dataset.source_type %>
        <% when 'postgresql' %>
          <div class="space-y-4">
            <h3 class="text-lg font-medium text-gray-900 mb-3">PostgreSQL Connection Details</h3>
            
            <div class="grid grid-cols-2 gap-4">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Host</label>
                <input type="text" 
                       name="dataset[connection_config][host]"
                       value="<%= @dataset.connection_config&.dig('host') %>"
                       placeholder="localhost"
                       class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md">
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Port</label>
                <input type="number" 
                       name="dataset[connection_config][port]"
                       value="<%= @dataset.connection_config&.dig('port') || 5432 %>"
                       placeholder="5432"
                       class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md">
              </div>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Database Name</label>
              <input type="text" 
                     name="dataset[connection_config][database]"
                     value="<%= @dataset.connection_config&.dig('database') %>"
                     placeholder="my_database"
                     class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md">
            </div>
            
            <div class="grid grid-cols-2 gap-4">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Username</label>
                <input type="text" 
                       name="dataset[connection_config][username]"
                       value="<%= @dataset.connection_config&.dig('username') %>"
                       placeholder="postgres"
                       class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md">
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Password</label>
                <input type="password" 
                       name="dataset[connection_config][password]"
                       placeholder="••••••••"
                       class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md">
                <p class="mt-1 text-xs text-gray-500">Leave blank to keep existing password</p>
              </div>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">SSL Mode</label>
              <select name="dataset[connection_config][ssl_mode]"
                      class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md">
                <option value="prefer" <%= 'selected' if @dataset.connection_config&.dig('ssl_mode') == 'prefer' %>>Prefer (default)</option>
                <option value="require" <%= 'selected' if @dataset.connection_config&.dig('ssl_mode') == 'require' %>>Require</option>
                <option value="disable" <%= 'selected' if @dataset.connection_config&.dig('ssl_mode') == 'disable' %>>Disable</option>
              </select>
            </div>
          </div>
          
        <% when 'mysql' %>
          <div class="space-y-4">
            <h3 class="text-lg font-medium text-gray-900 mb-3">MySQL Connection Details</h3>
            
            <div class="grid grid-cols-2 gap-4">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Host</label>
                <input type="text" 
                       name="dataset[connection_config][host]"
                       value="<%= @dataset.connection_config&.dig('host') %>"
                       placeholder="localhost"
                       class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md">
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Port</label>
                <input type="number" 
                       name="dataset[connection_config][port]"
                       value="<%= @dataset.connection_config&.dig('port') || 3306 %>"
                       placeholder="3306"
                       class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md">
              </div>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Database Name</label>
              <input type="text" 
                     name="dataset[connection_config][database]"
                     value="<%= @dataset.connection_config&.dig('database') %>"
                     placeholder="my_database"
                     class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md">
            </div>
            
            <div class="grid grid-cols-2 gap-4">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Username</label>
                <input type="text" 
                       name="dataset[connection_config][username]"
                       value="<%= @dataset.connection_config&.dig('username') %>"
                       placeholder="root"
                       class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md">
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Password</label>
                <input type="password" 
                       name="dataset[connection_config][password]"
                       placeholder="••••••••"
                       class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md">
                <p class="mt-1 text-xs text-gray-500">Leave blank to keep existing password</p>
              </div>
            </div>
          </div>
          
        <% when 'csv_upload' %>
          <div class="space-y-4">
            <h3 class="text-lg font-medium text-gray-900 mb-3">CSV File Information</h3>
            
            <div class="px-4 py-3 bg-gray-100 rounded-md">
              <p class="text-sm text-gray-700">
                <strong>Original File:</strong> 
                <%= @dataset.connection_config&.dig('filename') || 'Unknown' %>
              </p>
              <p class="text-sm text-gray-700 mt-1">
                <strong>Uploaded:</strong> 
                <%= @dataset.created_at.strftime('%B %d, %Y at %I:%M %p') %>
              </p>
              <% if @dataset.schema_metadata.present? %>
                <p class="text-sm text-gray-700 mt-1">
                  <strong>Size:</strong> 
                  <%= number_with_delimiter(@dataset.schema_metadata['row_count'] || 0) %> rows, 
                  <%= @dataset.schema_metadata['columns']&.size || 0 %> columns
                </p>
              <% end %>
            </div>
            
            <div class="px-4 py-3 bg-yellow-50 border border-yellow-200 rounded-md">
              <p class="text-sm text-yellow-800">
                <svg class="inline h-4 w-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
                </svg>
                CSV files cannot be re-uploaded. To use a different file, create a new data source.
              </p>
            </div>
          </div>
        <% end %>
        
        <!-- Submit Buttons -->
        <div class="flex justify-between items-center mt-6 pt-6 border-t border-gray-200">
          <button type="button"
                  id="test-connection-btn"
                  class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
            <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
            Test Connection
          </button>
          
          <div class="space-x-3">
            <%= link_to "Cancel", @dataset, 
                class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
            
            <%= f.submit "Save Changes", 
                class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500",
                data: { disable_with: "Saving..." } %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Test connection button
    document.getElementById('test-connection-btn').addEventListener('click', function() {
      // TODO: Implement AJAX test connection
      alert('Test connection functionality will be implemented with AJAX');
    });
  });
</script>