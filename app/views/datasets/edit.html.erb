<% content_for :title, "Edit #{@dataset.name}" %>

<!-- Modern Edit Dataset Page -->
<div class="bg-gradient-to-br from-slate-50 via-teal-50 to-cyan-50 dark:from-slate-900 dark:via-slate-800 dark:to-slate-900 min-h-screen pt-16">
  <!-- Breadcrumb & Navigation -->
  <div class="bg-white/80 dark:bg-slate-800/80 backdrop-blur-sm border-b border-slate-200/50 dark:border-slate-700/50 sticky top-16 z-10">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-3">
      <nav class="flex items-center space-x-2 text-sm">
        <%= link_to "Data Sources", datasets_path, class: "text-slate-500 dark:text-slate-400 hover:text-teal-600 dark:hover:text-teal-400 transition-colors" %>
        <svg class="h-4 w-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
        <%= link_to @dataset.name.truncate(20), @dataset, class: "text-slate-500 dark:text-slate-400 hover:text-teal-600 dark:hover:text-teal-400 transition-colors" %>
        <svg class="h-4 w-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
        <span class="text-slate-900 dark:text-slate-100 font-medium">Edit</span>
      </nav>
    </div>
  </div>

  <!-- Hero Header Section -->
  <div class="relative bg-gradient-to-r from-amber-600 via-orange-600 to-red-600 shadow-xl">
    <div class="absolute inset-0 bg-black/20"></div>
    <div class="relative max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="text-center">
        <div class="mx-auto h-16 w-16 bg-white/20 dark:bg-slate-800/30 rounded-xl flex items-center justify-center backdrop-blur-sm mb-6">
          <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
        </div>
        <h1 class="text-4xl font-bold text-white mb-4">Edit Data Source</h1>
        <p class="text-xl text-amber-100 max-w-2xl mx-auto">Update your data source configuration and settings</p>
      </div>
    </div>
  </div>

  <!-- Main Form Content -->
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="bg-white/70 dark:bg-slate-800/70 backdrop-blur-sm shadow-2xl rounded-2xl border border-slate-200/50 dark:border-slate-700/50 overflow-hidden">
      <%= form_with model: @dataset, local: true, class: "divide-y divide-slate-200/50 dark:divide-slate-700/50" do |form| %>
        <!-- Error Messages -->
        <% if @dataset.errors.any? %>
          <div class="px-8 py-6 bg-gradient-to-r from-red-50 to-red-100/50 dark:from-red-900/30 dark:to-red-800/20 border-b border-red-200 dark:border-red-700">
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0">
                <div class="h-10 w-10 bg-red-100 dark:bg-red-900/40 rounded-full flex items-center justify-center">
                  <svg class="h-5 w-5 text-red-600 dark:text-red-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                  </svg>
                </div>
              </div>
              <div class="flex-1 min-w-0">
                <h3 class="text-lg font-semibold text-red-900 dark:text-red-200 mb-2">
                  Please correct the following <%= pluralize(@dataset.errors.count, "error") %>:
                </h3>
                <ul class="space-y-1 text-sm text-red-800 dark:text-red-300">
                  <% @dataset.errors.full_messages.each do |message| %>
                    <li class="flex items-center space-x-2">
                      <svg class="h-4 w-4 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                      </svg>
                      <span><%= message %></span>
                    </li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Form Header -->
        <div class="bg-gradient-to-r from-amber-500 to-orange-600 px-8 py-6">
          <div class="flex items-center space-x-3">
            <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            <h2 class="text-2xl font-bold text-white">Update Data Source Details</h2>
          </div>
          <p class="text-amber-100 mt-2">Modify the configuration and settings for your data source</p>
        </div>

        <!-- Form Fields -->
        <div class="px-8 py-8 space-y-8">
          <!-- Dataset Name Field -->
          <div class="group">
            <label class="flex items-center space-x-2 text-sm font-semibold text-slate-700 dark:text-slate-300 mb-3">
              <svg class="h-4 w-4 text-amber-600 dark:text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
              </svg>
              <span>Data Source Name</span>
              <span class="text-red-500">*</span>
            </label>
            <%= form.text_field :name, 
                class: "block w-full rounded-xl border-2 border-slate-300 dark:border-slate-600 px-4 py-3 text-slate-900 dark:text-slate-100 bg-white dark:bg-slate-700 placeholder-slate-400 dark:placeholder-slate-400 focus:border-amber-500 dark:focus:border-amber-400 focus:ring-4 focus:ring-amber-500/20 dark:focus:ring-amber-400/20 focus:outline-none transition-all duration-200 text-lg group-hover:border-amber-400 dark:group-hover:border-amber-500", 
                placeholder: "e.g., Customer Database, Sales Data, Analytics Export...",
                required: true %>
            <p class="mt-2 text-sm text-slate-500 dark:text-slate-400">Choose a descriptive name that helps you identify this data source</p>
          </div>

          <!-- Description Field -->
          <div class="group">
            <label class="flex items-center space-x-2 text-sm font-semibold text-slate-700 dark:text-slate-300 mb-3">
              <svg class="h-4 w-4 text-amber-600 dark:text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
              </svg>
              <span>Description</span>
            </label>
            <%= form.text_area :description, 
                rows: 4, 
                class: "block w-full rounded-xl border-2 border-slate-300 dark:border-slate-600 px-4 py-3 text-slate-900 dark:text-slate-100 bg-white dark:bg-slate-700 placeholder-slate-400 dark:placeholder-slate-400 focus:border-amber-500 dark:focus:border-amber-400 focus:ring-4 focus:ring-amber-500/20 dark:focus:ring-amber-400/20 focus:outline-none transition-all duration-200 resize-none group-hover:border-amber-400 dark:group-hover:border-amber-500", 
                placeholder: "Describe what this data source contains, its purpose, and any relevant context..." %>
            <p class="mt-2 text-sm text-slate-500 dark:text-slate-400">Optional: Provide additional context about your data source</p>
          </div>

          <!-- Data Source Type Field -->
          <div class="group">
            <label class="flex items-center space-x-2 text-sm font-semibold text-slate-700 dark:text-slate-300 mb-3">
              <svg class="h-4 w-4 text-amber-600 dark:text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4"></path>
              </svg>
              <span>Data Source Type</span>
              <span class="text-red-500">*</span>
            </label>
            <%= form.select :data_source_type, [
                  ['PostgreSQL Database', 'postgresql'],
                  ['MySQL Database', 'mysql'], 
                  ['SQLite Database', 'sqlite'],
                  ['MongoDB Database', 'mongodb'],
                  ['CSV File', 'csv'],
                  ['Excel File', 'excel'],
                  ['API Endpoint', 'api']
                ], 
                { prompt: 'Choose your data source type...' }, 
                { 
                  class: "block w-full rounded-xl border-2 border-slate-300 dark:border-slate-600 px-4 py-3 text-slate-900 dark:text-slate-100 bg-white dark:bg-slate-700 focus:border-amber-500 dark:focus:border-amber-400 focus:ring-4 focus:ring-amber-500/20 dark:focus:ring-amber-400/20 focus:outline-none transition-all duration-200 text-lg cursor-pointer group-hover:border-amber-400 dark:group-hover:border-amber-500",
                  required: true
                } %>
            <p class="mt-2 text-sm text-slate-500 dark:text-slate-400">Select the type of data source you want to connect</p>
          </div>

          <!-- Data Source Type Info Cards -->
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 mt-6" id="source-type-info">
            <div class="source-info bg-gradient-to-br from-blue-50 to-blue-100 dark:from-blue-900/30 dark:to-blue-800/20 p-4 rounded-xl border border-blue-200 dark:border-blue-700" data-type="database">
              <div class="flex items-center space-x-2 mb-2">
                <svg class="h-5 w-5 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7"></path>
                </svg>
                <h4 class="font-semibold text-blue-900 dark:text-blue-200">Database Sources</h4>
              </div>
              <p class="text-sm text-blue-700 dark:text-blue-300">Connect to PostgreSQL, MySQL, SQLite, or MongoDB databases for real-time analytics</p>
            </div>
            
            <div class="source-info bg-gradient-to-br from-green-50 to-green-100 dark:from-green-900/30 dark:to-green-800/20 p-4 rounded-xl border border-green-200 dark:border-green-700" data-type="file">
              <div class="flex items-center space-x-2 mb-2">
                <svg class="h-5 w-5 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                <h4 class="font-semibold text-green-900 dark:text-green-200">File Sources</h4>
              </div>
              <p class="text-sm text-green-700 dark:text-green-300">Upload CSV or Excel files for quick data analysis and visualization</p>
            </div>
            
            <div class="source-info bg-gradient-to-br from-purple-50 to-purple-100 dark:from-purple-900/30 dark:to-purple-800/20 p-4 rounded-xl border border-purple-200 dark:border-purple-700" data-type="api">
              <div class="flex items-center space-x-2 mb-2">
                <svg class="h-5 w-5 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.111 16.404a5.5 5.5 0 017.778 0M12 20h.01m-7.08-7.071c3.904-3.905 10.236-3.905 14.141 0M1.394 9.393c5.857-5.857 15.355-5.857 21.213 0"></path>
                </svg>
                <h4 class="font-semibold text-purple-900 dark:text-purple-200">API Sources</h4>
              </div>
              <p class="text-sm text-purple-700 dark:text-purple-300">Connect to REST APIs and web services for dynamic data integration</p>
            </div>
          </div>

          <!-- Dataset Statistics (Read-only info) -->
          <div class="bg-gradient-to-br from-slate-50 to-slate-100 dark:from-slate-800/50 dark:to-slate-700/50 rounded-xl border border-slate-200 dark:border-slate-600 p-6">
            <h3 class="text-lg font-semibold text-slate-900 dark:text-slate-100 mb-4 flex items-center space-x-2">
              <svg class="h-5 w-5 text-amber-600 dark:text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
              <span>Dataset Statistics</span>
            </h3>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
              <div class="text-center">
                <div class="text-2xl font-bold text-slate-900 dark:text-slate-100"><%= @dataset.analysis_requests.count %></div>
                <div class="text-sm text-slate-500 dark:text-slate-400">Analyses Performed</div>
              </div>
              <div class="text-center">
                <div class="text-2xl font-bold text-slate-900 dark:text-slate-100"><%= time_ago_in_words(@dataset.created_at) %></div>
                <div class="text-sm text-slate-500 dark:text-slate-400">Time Since Created</div>
              </div>
              <div class="text-center">
                <div class="text-2xl font-bold text-slate-900 dark:text-slate-100"><%= time_ago_in_words(@dataset.updated_at) %></div>
                <div class="text-sm text-slate-500 dark:text-slate-400">Last Updated</div>
              </div>
            </div>
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="bg-gradient-to-r from-slate-50 to-slate-100 dark:from-slate-800/50 dark:to-slate-700/50 px-8 py-6">
          <div class="flex flex-col sm:flex-row items-center justify-between space-y-4 sm:space-y-0 sm:space-x-4">
            <div class="flex items-center space-x-2 text-sm text-slate-500 dark:text-slate-400">
              <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span>Changes will be saved immediately and securely</span>
            </div>
            
            <div class="flex flex-col sm:flex-row items-center space-y-3 sm:space-y-0 sm:space-x-4">
              <%= link_to @dataset, class: "w-full sm:w-auto inline-flex items-center justify-center px-6 py-3 border-2 border-slate-300 dark:border-slate-600 rounded-xl shadow-lg text-sm font-semibold text-slate-700 dark:text-slate-300 bg-white/50 dark:bg-slate-800/50 hover:bg-slate-50 dark:hover:bg-slate-700/50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-slate-500 backdrop-blur-sm transition-all duration-200" do %>
                <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                Cancel
              <% end %>
              <%= form.submit "Update Data Source", class: "w-full sm:w-auto inline-flex items-center justify-center px-8 py-3 bg-gradient-to-r from-amber-600 to-orange-600 border border-transparent rounded-xl shadow-xl text-base font-bold text-white hover:from-amber-700 hover:to-orange-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-amber-500 transform hover:scale-105 transition-all duration-200 disabled:opacity-50 disabled:cursor-not-allowed disabled:transform-none" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  // Add some interactivity for the data source type selection
  document.addEventListener('DOMContentLoaded', function() {
    const selectField = document.getElementById('dataset_data_source_type');
    const infoCards = document.querySelectorAll('.source-info');
    
    // Highlight current selection on load
    if (selectField && selectField.value) {
      highlightCard(selectField.value);
    }
    
    if (selectField) {
      selectField.addEventListener('change', function() {
        highlightCard(this.value);
      });
    }
    
    function highlightCard(selectedValue) {
      infoCards.forEach(card => {
        card.classList.remove('ring-2', 'ring-amber-500', 'ring-offset-2');
      });
      
      const selectedType = selectedValue.toLowerCase();
      let highlightType = '';
      
      if (['postgresql', 'mysql', 'sqlite', 'mongodb'].includes(selectedType)) {
        highlightType = 'database';
      } else if (['csv', 'excel'].includes(selectedType)) {
        highlightType = 'file';
      } else if (selectedType === 'api') {
        highlightType = 'api';
      }
      
      if (highlightType) {
        const targetCard = document.querySelector(`[data-type="${highlightType}"]`);
        if (targetCard) {
          targetCard.classList.add('ring-2', 'ring-amber-500', 'ring-offset-2');
        }
      }
    }
  });
</script>