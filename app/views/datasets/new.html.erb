<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="bg-white shadow-xl rounded-lg">
    <!-- Header -->
    <div class="px-6 py-4 border-b border-gray-200">
      <h1 class="text-2xl font-bold text-gray-900">Connect Data Source</h1>
      <p class="mt-1 text-sm text-gray-500">Add a database connection or upload a CSV file</p>
    </div>
    
    <!-- Connection Type Selector -->
    <div class="px-6 py-4">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
        <button type="button" 
                class="connection-type-btn border-2 border-gray-300 rounded-lg p-4 hover:border-indigo-500 focus:border-indigo-500 focus:outline-none transition-colors"
                data-type="postgresql">
          <div class="text-center">
            <div class="h-12 w-12 mx-auto rounded-lg bg-blue-100 flex items-center justify-center mb-2">
              <svg class="h-8 w-8 text-blue-600" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
              </svg>
            </div>
            <h3 class="font-medium text-gray-900">PostgreSQL</h3>
            <p class="text-xs text-gray-500 mt-1">Connect to PostgreSQL database</p>
          </div>
        </button>
        
        <button type="button"
                class="connection-type-btn border-2 border-gray-300 rounded-lg p-4 hover:border-indigo-500 focus:border-indigo-500 focus:outline-none transition-colors"
                data-type="mysql">
          <div class="text-center">
            <div class="h-12 w-12 mx-auto rounded-lg bg-orange-100 flex items-center justify-center mb-2">
              <svg class="h-8 w-8 text-orange-600" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8z"/>
              </svg>
            </div>
            <h3 class="font-medium text-gray-900">MySQL</h3>
            <p class="text-xs text-gray-500 mt-1">Connect to MySQL database</p>
          </div>
        </button>
        
        <button type="button"
                class="connection-type-btn border-2 border-gray-300 rounded-lg p-4 hover:border-indigo-500 focus:border-indigo-500 focus:outline-none transition-colors"
                data-type="csv_upload">
          <div class="text-center">
            <div class="h-12 w-12 mx-auto rounded-lg bg-green-100 flex items-center justify-center mb-2">
              <svg class="h-8 w-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
              </svg>
            </div>
            <h3 class="font-medium text-gray-900">CSV Upload</h3>
            <p class="text-xs text-gray-500 mt-1">Upload a CSV file</p>
          </div>
        </button>
      </div>
      
      <!-- Connection Form -->
      <%= form_with model: @dataset, local: false, data: { turbo: true } do |f| %>
        <%= f.hidden_field :source_type, value: 'postgresql', id: 'dataset_source_type' %>
        
        <!-- Common Fields -->
        <div class="space-y-4 mb-6">
          <div>
            <%= f.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :name, 
                placeholder: "e.g., Sales Database",
                class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
          </div>
          
          <div>
            <%= f.label :description, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_area :description,
                rows: 2,
                placeholder: "Optional description of this data source",
                class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
          </div>
        </div>
        
        <!-- PostgreSQL Connection -->
        <div id="postgresql-config" class="connection-config space-y-4">
          <h3 class="text-lg font-medium text-gray-900 mb-3">PostgreSQL Connection Details</h3>
          
          <div class="grid grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Host</label>
              <input type="text" 
                     name="dataset[connection_config][host]"
                     placeholder="localhost"
                     class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md">
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Port</label>
              <input type="number" 
                     name="dataset[connection_config][port]"
                     placeholder="5432"
                     value="5432"
                     class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md">
            </div>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Database Name</label>
            <input type="text" 
                   name="dataset[connection_config][database]"
                   placeholder="my_database"
                   class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md">
          </div>
          
          <div class="grid grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Username</label>
              <input type="text" 
                     name="dataset[connection_config][username]"
                     placeholder="postgres"
                     class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md">
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Password</label>
              <input type="password" 
                     name="dataset[connection_config][password]"
                     placeholder="••••••••"
                     class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md">
            </div>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">SSL Mode</label>
            <select name="dataset[connection_config][ssl_mode]"
                    class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md">
              <option value="prefer">Prefer (default)</option>
              <option value="require">Require</option>
              <option value="disable">Disable</option>
            </select>
          </div>
        </div>
        
        <!-- MySQL Connection (hidden by default) -->
        <div id="mysql-config" class="connection-config space-y-4 hidden">
          <h3 class="text-lg font-medium text-gray-900 mb-3">MySQL Connection Details</h3>
          
          <div class="grid grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Host</label>
              <input type="text" 
                     name="dataset[connection_config][host]"
                     placeholder="localhost"
                     disabled
                     class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md">
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Port</label>
              <input type="number" 
                     name="dataset[connection_config][port]"
                     placeholder="3306"
                     value="3306"
                     disabled
                     class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md">
            </div>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Database Name</label>
            <input type="text" 
                   name="dataset[connection_config][database]"
                   placeholder="my_database"
                   disabled
                   class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md">
          </div>
          
          <div class="grid grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Username</label>
              <input type="text" 
                     name="dataset[connection_config][username]"
                     placeholder="root"
                     disabled
                     class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md">
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Password</label>
              <input type="password" 
                     name="dataset[connection_config][password]"
                     placeholder="••••••••"
                     disabled
                     class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md">
            </div>
          </div>
        </div>
        
        <!-- CSV Upload (hidden by default) -->
        <div id="csv-config" class="connection-config space-y-4 hidden">
          <h3 class="text-lg font-medium text-gray-900 mb-3">Upload CSV File</h3>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Select File</label>
            <input type="file" 
                   name="dataset[csv_file]"
                   accept=".csv"
                   disabled
                   class="block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-medium file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100">
            <p class="mt-1 text-xs text-gray-500">CSV files up to 100MB</p>
          </div>
        </div>
        
        <!-- Submit Buttons -->
        <div class="flex justify-between items-center mt-6 pt-6 border-t border-gray-200">
          <button type="button"
                  id="test-connection-btn"
                  class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
            <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
            Test Connection
          </button>
          
          <div class="space-x-3">
            <%= link_to "Cancel", datasets_path, 
                class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
            
            <%= f.submit "Save Data Source", 
                class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500",
                data: { disable_with: "Saving..." } %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const connectionTypeBtns = document.querySelectorAll('.connection-type-btn');
    const sourceTypeField = document.getElementById('dataset_source_type');
    const connectionConfigs = document.querySelectorAll('.connection-config');
    
    connectionTypeBtns.forEach(btn => {
      btn.addEventListener('click', function() {
        // Update active state
        connectionTypeBtns.forEach(b => b.classList.remove('border-indigo-500', 'bg-indigo-50'));
        this.classList.add('border-indigo-500', 'bg-indigo-50');
        
        // Update hidden field
        const type = this.dataset.type;
        sourceTypeField.value = type;
        
        // Show/hide appropriate config section
        connectionConfigs.forEach(config => {
          config.classList.add('hidden');
          config.querySelectorAll('input, select').forEach(field => {
            field.disabled = true;
          });
        });
        
        const activeConfig = document.getElementById(`${type.replace('_', '-')}-config`);
        if (activeConfig) {
          activeConfig.classList.remove('hidden');
          activeConfig.querySelectorAll('input, select').forEach(field => {
            field.disabled = false;
          });
        }
      });
    });
    
    // Test connection button
    document.getElementById('test-connection-btn').addEventListener('click', function() {
      // TODO: Implement AJAX test connection
      alert('Test connection functionality will be implemented with AJAX');
    });
  });
</script>