<div class="min-h-screen bg-gray-50" data-dashboard-id="<%= @dashboard.id %>" data-controller="dashboard">
  <!-- Dashboard Header -->
  <div class="bg-white shadow-sm border-b border-gray-200">
    <div class="max-w-full mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center py-4">
        <div class="flex items-center space-x-4">
          <%= link_to dashboards_path, class: "text-gray-500 hover:text-gray-700" do %>
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
          <% end %>
          
          <div>
            <h1 class="text-2xl font-bold text-gray-900"><%= @dashboard.name %></h1>
            <p class="text-sm text-gray-600"><%= @dashboard.description %></p>
          </div>
        </div>
        
        <div class="flex items-center space-x-3">
          <!-- Edit Mode Toggle -->
          <button data-dashboard-target="editToggle" data-action="click->dashboard#toggleEditMode" class="inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500">
            <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            Edit Layout
          </button>
          
          <!-- Add Widget Button -->
          <button data-dashboard-target="addButton" data-action="click->dashboard#showAddModal" class="inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-purple-600 hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 hidden">
            <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            Add Widget
          </button>
          
          <!-- Refresh Button -->
          <button data-action="click->dashboard#refreshDashboard" class="inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500">
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
            </svg>
          </button>
          
          <!-- Settings -->
          <%= link_to edit_dashboard_path(@dashboard), class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500" do %>
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Dashboard Grid -->
  <div class="max-w-full mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div data-dashboard-target="grid" class="grid grid-cols-12 gap-4 auto-rows-[80px]" data-edit-mode="false">
      <% @widgets.each do |widget| %>
        <div class="dashboard-widget bg-white rounded-lg shadow-md p-4 hover:shadow-lg transition-shadow"
             data-dashboard-target="widget"
             data-widget-id="<%= widget.id %>"
             data-widget-type="<%= widget.widget_type %>"
             style="grid-column: span <%= widget.width %>; grid-row: span <%= widget.height %>; grid-column-start: <%= widget.col + 1 %>; grid-row-start: <%= widget.row + 1 %>;">
          
          <!-- Widget Header -->
          <div class="widget-header flex justify-between items-center mb-3">
            <h3 class="text-sm font-semibold text-gray-900"><%= widget.title %></h3>
            <div class="widget-actions flex space-x-1">
              <button class="refresh-widget text-gray-400 hover:text-gray-600" data-widget-id="<%= widget.id %>" data-action="click->dashboard#refreshWidget">
                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                </svg>
              </button>
              <button class="edit-widget text-gray-400 hover:text-gray-600 hidden" data-widget-id="<%= widget.id %>">
                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
              </button>
              <button class="remove-widget text-gray-400 hover:text-red-600 hidden" data-widget-id="<%= widget.id %>" data-action="click->dashboard#removeWidget">
                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
              </button>
            </div>
          </div>
          
          <!-- Widget Content -->
          <div class="widget-content h-[calc(100%-2rem)]" data-widget-data='<%= widget.data.to_json %>'>
            <%= render partial: "dashboards/widgets/#{widget.widget_type}", locals: { widget: widget, data: widget.data } %>
          </div>
          
          <!-- Resize Handle (hidden by default) -->
          <div class="resize-handle absolute bottom-0 right-0 w-4 h-4 cursor-se-resize hidden">
            <svg class="w-4 h-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
              <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"></path>
            </svg>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Add Widget Modal -->
<div data-dashboard-target="modal" class="hidden fixed inset-0 bg-gray-500 bg-opacity-75 overflow-y-auto h-full w-full z-50">
  <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Add Widget</h3>
    
    <div class="space-y-4">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Widget Type</label>
        <select id="widget-type-select" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-purple-500 focus:border-purple-500">
          <% Dashboard::WIDGET_TYPES.each do |key, label| %>
            <option value="<%= key %>"><%= label %></option>
          <% end %>
        </select>
      </div>
      
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Title</label>
        <input type="text" id="widget-title-input" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-purple-500 focus:border-purple-500" placeholder="Widget Title">
      </div>
      
      <div class="grid grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Width</label>
          <input type="number" id="widget-width-input" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-purple-500 focus:border-purple-500" value="3" min="1" max="12">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Height</label>
          <input type="number" id="widget-height-input" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-purple-500 focus:border-purple-500" value="2" min="1" max="10">
        </div>
      </div>
    </div>
    
    <div class="mt-6 flex justify-end space-x-3">
      <button data-action="click->dashboard#hideAddModal" class="px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500">
        Cancel
      </button>
      <button data-action="click->dashboard#addWidget" class="px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-purple-600 hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500">
        Add Widget
      </button>
    </div>
  </div>
</div>

