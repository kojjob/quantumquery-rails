<div class="h-full overflow-auto">
  <table class="w-full text-sm text-left text-gray-600">
    <thead class="text-xs text-gray-700 uppercase bg-gray-50">
      <tr>
        <% if data[:headers].present? %>
          <% data[:headers].each do |header| %>
            <th scope="col" class="px-3 py-2"><%= header %></th>
          <% end %>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% if data[:rows].present? %>
        <% data[:rows].each do |row| %>
          <tr class="bg-white border-b hover:bg-gray-50">
            <% row.each do |cell| %>
              <td class="px-3 py-2"><%= cell %></td>
            <% end %>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="<%= data[:headers]&.length || 1 %>" class="px-3 py-4 text-center text-gray-500">
            No data available
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>