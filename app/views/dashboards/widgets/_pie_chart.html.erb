<div class="h-full">
  <canvas id="pie-chart-<%= widget.id %>" class="w-full h-full"></canvas>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const ctx = document.getElementById('pie-chart-<%= widget.id %>').getContext('2d');
    const chartData = <%= data.to_json.html_safe %>;
    
    new Chart(ctx, {
      type: 'pie',
      data: chartData,
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          legend: {
            position: 'bottom',
            labels: {
              padding: 10,
              font: {
                size: 10
              }
            }
          }
        }
      }
    });
  });
</script>