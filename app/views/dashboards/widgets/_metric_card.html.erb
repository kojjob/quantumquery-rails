<div class="flex flex-col h-full">
  <div class="text-3xl font-bold text-gray-900">
    <%= data[:value] || 0 %>
  </div>
  <div class="text-sm text-gray-600 mt-1">
    <%= data[:label] || "Metric" %>
  </div>
  <% if data[:change] %>
    <div class="flex items-center mt-2">
      <% if data[:trend] == "up" %>
        <svg class="h-4 w-4 text-green-500 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
        </svg>
        <span class="text-sm text-green-600">+<%= data[:change] %>%</span>
      <% else %>
        <svg class="h-4 w-4 text-red-500 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 17h8m0 0V9m0 8l-8-8-4 4-6-6"></path>
        </svg>
        <span class="text-sm text-red-600"><%= data[:change] %>%</span>
      <% end %>
    </div>
  <% end %>
</div>