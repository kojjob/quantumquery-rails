<div class="h-full overflow-auto">
  <% if data[:datasets].present? %>
    <div class="space-y-3">
      <% data[:datasets].each do |dataset| %>
        <div class="border rounded-lg p-3 hover:bg-gray-50">
          <div class="flex justify-between items-start">
            <div>
              <h4 class="text-sm font-medium text-gray-900"><%= dataset[:name] %></h4>
              <p class="text-xs text-gray-500 mt-1">
                <%= dataset[:file_type]&.upcase %> â€¢ <%= number_to_human_size(dataset[:file_size] || 0) %>
              </p>
              <div class="flex items-center mt-2 space-x-4">
                <span class="text-xs text-gray-600">
                  <strong><%= dataset[:rows] || 0 %></strong> rows
                </span>
                <span class="text-xs text-gray-600">
                  <strong><%= dataset[:columns] || 0 %></strong> columns
                </span>
              </div>
            </div>
            <span class="px-2 py-1 text-xs font-medium rounded-full <%= dataset[:status] == 'active' ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
              <%= dataset[:status]&.capitalize || 'Unknown' %>
            </span>
          </div>
          <% if dataset[:id] %>
            <div class="mt-3">
              <%= link_to "View Dataset", dataset_path(dataset[:id]), class: "text-xs text-purple-600 hover:text-purple-700" %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="flex items-center justify-center h-full text-gray-500">
      <div class="text-center">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        <p class="mt-2 text-sm">No datasets uploaded</p>
      </div>
    </div>
  <% end %>
</div>